{
  "scripts": {
    "start": "webpack-dev-server --stdin --config ./config/webpack.dev.config.ts",
    "build": "webpack -p --config ./config/webpack.prod.config.ts",
    "lint": "tslint src/**/*.tsx src/**/*.ts helpers/**/*.ts config/**/*.ts",
    "test": "jest \"/__tests__/.*\\.test\\.(ts|tsx)$\"",
    "test:e2e": "ts-node scripts/E2ETestSuiteRunner.ts --forceExit --setupTestFrameworkScriptFile=scripts/E2ETestSuiteSetup.ts \"/__tests__/.*\\.spec\\.(ts|tsx)$\"",
    "test:e2e-manual": "jest \"/__tests__/.*\\.spec\\.(ts|tsx)$\"",
    "test:coverage": "npm run test -- --coverage",
    "test:coverage-ci": "npm run test -- --coverage && cat ./coverage/remapped/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "selenium-start": "selenium-standalone install && selenium-standalone start",
    "serve": "ts-node server.ts",
    "serve:background": "yarn serve > /dev/null 2>&1 &"
  },
  "devDependencies": {
    "@types/enzyme": "^2.7.9",
    "@types/express": "^4.0.35",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.14",
    "@types/selenium-webdriver": "^3.0.3",
    "@types/webpack-dev-server": "^1.12.6",
    "@types/webpack-merge": "^0.0.4",
    "awesome-typescript-loader": "^3.1.2",
    "clean-webpack-plugin": "^0.1.16",
    "coveralls": "^2.13.0",
    "enzyme": "^2.8.2",
    "express": "^4.15.2",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "json-loader": "^0.5.4",
    "offline-plugin": "^4.7.0",
    "react-test-renderer": "^15.5.4",
    "selenium-standalone": "^6.4.1",
    "selenium-webdriver": "^3.4.0",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^19.0.14",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^2.6.0",
    "typescript": "^2.2.2",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "@types/react": "^15.0.22",
    "@types/react-dom": "^15.5.0",
    "kanawana": "^2.2.4",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.tsx",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**/*"
    ],
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ]
  },
  "license": "WTFPL"
}
