{
  "scripts": {
    "start": "webpack-dev-server --stdin --config ./config/webpack.dev.config.js",
    "build": "webpack -p --config ./config/webpack.prod.config.js",
    "lint": "tslint src/**/*.tsx src/**/*.ts helpers/**/*.ts",
    "test": "jest",
    "coverage": "jest --coverage",
    "ci-coverage": "jest --coverage && cat ./coverage/remapped/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "selenium-start": "selenium-standalone install && selenium-standalone start",
    "serve": "node server.js"
  },
  "devDependencies": {
    "@types/enzyme": "^2.7.9",
    "@types/jest": "^19.2.2",
    "@types/selenium-webdriver": "^3.0.3",
    "awesome-typescript-loader": "^3.1.2",
    "coveralls": "^2.13.0",
    "enzyme": "^2.8.2",
    "express": "^4.15.2",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "json-loader": "^0.5.4",
    "react-test-renderer": "^15.5.4",
    "selenium-standalone": "^6.4.1",
    "selenium-webdriver": "^3.4.0",
    "source-map-loader": "^0.2.1",
    "sw-precache-webpack-plugin": "^0.9.1",
    "ts-jest": "^19.0.14",
    "tslint": "^5.1.0",
    "tslint-react": "^2.6.0",
    "typescript": "^2.2.2",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "@types/react": "^15.0.22",
    "@types/react-dom": "^15.5.0",
    "kanawana": "^2.2.4",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*(test|spec)).(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.tsx",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**/*"
    ],
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ]
  },
  "license": "WTFPL"
}
