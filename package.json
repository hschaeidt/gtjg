{
  "scripts": {
    "start": "webpack-dev-server --content-base public/ --config ./config/webpack.dev.config.js",
    "build": "webpack -p --config ./config/webpack.prod.config.js",
    "lint": "tslint src/**/*.tsx src/**/*.ts",
    "test": "webpack --config ./config/webpack.test.config.js && nyc ava",
    "coverage": "jest --coverage",
    "ci-coverage": "jest --coverage && cat ./coverage/remapped/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "selenium-start": "selenium-standalone install && selenium-standalone start",
    "serve": "node server.js"
  },
  "devDependencies": {
    "@types/selenium-webdriver": "^3.0.3",
    "ava": "^0.19.1",
    "awesome-typescript-loader": "^3.1.2",
    "coveralls": "^2.13.0",
    "express": "^4.15.2",
    "glob": "^7.1.1",
    "json-loader": "^0.5.4",
    "nyc": "^10.3.0",
    "react-test-renderer": "^15.5.4",
    "selenium-standalone": "^6.4.1",
    "selenium-webdriver": "^3.4.0",
    "source-map-loader": "^0.2.1",
    "sw-precache-webpack-plugin": "^0.9.1",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "tslint-react": "^2.6.0",
    "typescript": "^2.2.2",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "@types/react": "^15.0.22",
    "@types/react-dom": "^15.5.0",
    "kanawana": "^2.2.4",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 70,
    "include": [
      "src/**/*.{ts,tsx}"
    ],
    "exclude": [
      "src/**/*.{spec,test}.{ts,tsx}"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".tsx",
      ".ts",
      ".js",
      ".jsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "license": "WTFPL"
}
