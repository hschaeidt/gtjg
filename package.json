{
  "scripts": {
    "start": "webpack-dev-server --content-base public/ --config ./config/webpack.dev.config.js",
    "build": "webpack -p --config ./config/webpack.prod.config.js",
    "lint": "tslint src/**/*",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "awesome-typescript-loader": "^3.1.2",
    "jest": "^19.0.2",
    "react-test-renderer": "^15.5.4",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^19.0.10",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "@types/react": "^15.0.22",
    "@types/react-dom": "^15.5.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "app/**/*.{ts,tsx}"
    ]
  },
  "license": "WTFPL"
}
